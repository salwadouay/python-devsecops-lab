pipeline {
    agent any

    environment {
        // You can customize this to your virtualenv if needed
        PYTHON = "/usr/bin/python3"
        PIP = "/usr/bin/pip3"
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Checking out source code...'
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'ğŸ“¦ Installing dependencies...'
                sh '''
                    ${PIP} install --upgrade pip
                    ${PIP} install -r requirements.txt || ${PIP} install Flask pytest
                '''
            }
        }

        stage('Run Tests') {
            steps {
                echo 'ğŸ§ª Running pytest...'
                sh '''
                    pytest --maxfail=1 --disable-warnings -q
                '''
            }
        }

        stage('Run Flask App (Optional)') {
            when {
                expression { return false } // Change to true if you want to deploy/run Flask app
            }
            steps {
                echo 'ğŸš€ Starting Flask app...'
                sh '''
                    nohup ${PYTHON} app.py &
                    sleep 5
                    curl -I http://127.0.0.1:5000
                '''
            }
        }
    }

    post {
        success {
            echo 'âœ… Build and tests passed successfully!'
        }
        failure {
            echo 'âŒ Build or tests failed!'
        }
    }
}
